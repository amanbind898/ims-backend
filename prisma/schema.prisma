generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  type        String
  sku         String  @unique
  image_url   String   // âœ… This should be snake_case now
  description String
  quantity    Int
  price       Float
}
